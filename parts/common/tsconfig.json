{
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "cypress", "**/*.test.ts"],
  "references": [{ "path": "../common" }]

}

